<!DOCTYPE html>
<html>
<head>
  <title>TestApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class='container'>
		<h1><%= link_to 'Главная страница', root_path %></h1>
		<%= render 'main/buttons' %>
		<div class='row'>
			<div class='col-md-2'>
				<%= render 'main/menu' %>
			</div>
			<div class='col-md-10'>
				<% if flash.keys.present? %>
      		<br>
      		<%= render 'layouts/flash_messages', flash: flash %>
  			<% end %>
				<%= yield %>
			</div>
		</div>
	</div>
</body>
</html>
